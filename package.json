{
  "name": "competitions-app",
  "version": "0.1.5",
  "author": "Mohammed Adel <mat93.job@gmail.com>",
  "productName": "تطبيق مسابقات المدارس",
  "description": "Offline, Arabic-friendly desktop application for managing school competitions.",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.sinar.competitionsapp",
    "productName": "تطبيق مسابقات المدارس",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/db/schema.sql",
        "to": "db/schema.sql"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "تطبيق مسابقات المدارس",
      "artifactName": "CompetitionsApp-Setup-${version}.exe"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable-${arch}.exe"
    }
  }
}
